<% include header.ejs %>
    <style type="text/css">
        html { height: 100% }
        body { height: 100%; margin: 0; padding: 0 }
    </style>

    <div class="btn btn-primary" style="position:absolute;z-index:99999;top:50%;" id="chatHideVisible">Chat</div>

    <script type="text/javascript" src="//maps.googleapis.com/maps/api/js?language=pl?sensor=true"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src='/js/sockets/GoogleMaps.js'></script>
    <script type="text/javascript" src='/js/sockets/Chat.js'></script>
    <script type="text/javascript" src='/js/sockets/googleRoom.js'></script>

    <div class="google-room-chat hidden-display-chat" id="<%= id %>">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <span class="glyphicon glyphicon-comment"></span> Chat
                    </div>
                        <ul class="chat" id="chat_box">
                        </ul>
                    <div class="panel-footer">
                        <div class="input-group">
                            <input id="chat_input" type="text" class="form-control input-sm" placeholder="Message...">
                            <span class="input-group-btn">
                                <button class="btn btn-info btn-sm" id="message_send">
                                    Send
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
    </div>
    <div id="map-canvas"/>

    <script>
        $(function() {
            $(window).resize(function() {
                $('.google-room-chat ul').height($(window).height()*0.690);
            });
            $(window).resize();
        });
    </script>
<% include footer.ejs %>